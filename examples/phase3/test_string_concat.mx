package main

import "fmt"

func main() {
	// Test basic concatenation
	s1 := "Hello"
	s2 := " "
	s3 := "World"

	result := s1 + s2 + s3
	fmt.Println("Concatenation:", result)

	// Test concatenation with literals
	greeting := "Hi" + ", " + "there!"
	fmt.Println("Literal concat:", greeting)

	// Test concatenation in assignment
	msg := ""
	msg = msg + "Building"
	msg = msg + " a "
	msg = msg + "message"
	fmt.Println("Incremental:", msg)
}
